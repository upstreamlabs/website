---
import type { CallToAction } from '~/types';
import Button from '~/components/ui/Button.astro';

export interface Props {
  title?: string;
  subtitle?: string;
  tagline?: string;
  content?: string;
  callToAction?: string | CallToAction;
  callToAction2?: string | CallToAction;
}

const {
  title = await Astro.slots.render('title'),
  subtitle = await Astro.slots.render('subtitle'),
  tagline,
  content = await Astro.slots.render('content'),
  callToAction = await Astro.slots.render('callToAction'),
  callToAction2 = await Astro.slots.render('callToAction2'),
} = Astro.props;
---

<section class="relative md:-mt-[76px] not-prose overflow-hidden z-0">
  <!-- Floating gradient orbs -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none" aria-hidden="true">
    <div class="hero-orb hero-orb-1"></div>
    <div class="hero-orb hero-orb-2"></div>
    <div class="hero-orb hero-orb-3"></div>
    <div class="hero-orb hero-orb-4"></div>
    <div class="hero-orb hero-orb-center"></div>
  </div>

  <!-- Ripple effect - multiple centers -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none" aria-hidden="true">
    <div class="ripple-origin ripple-origin-1">
      <div class="hero-ripple hero-ripple-a"></div>
      <div class="hero-ripple hero-ripple-b"></div>
    </div>
    <div class="ripple-origin ripple-origin-2">
      <div class="hero-ripple hero-ripple-a"></div>
      <div class="hero-ripple hero-ripple-b"></div>
    </div>
    <div class="ripple-origin ripple-origin-3">
      <div class="hero-ripple hero-ripple-a"></div>
      <div class="hero-ripple hero-ripple-b"></div>
    </div>
  </div>

  <!-- Decorative grid pattern -->
  <div class="absolute inset-0 pointer-events-none hero-grid" aria-hidden="true"></div>

  <div class="relative max-w-7xl mx-auto px-4 sm:px-6">
    <div class="pt-10 md:pt-[120px] pointer-events-none"></div>
    <div class="py-12 md:py-20 pb-8 md:pb-8">
      <div class="text-center max-w-5xl mx-auto">
        {
          tagline && (
            <p
              class="text-base text-secondary dark:text-blue-200 font-bold tracking-wide uppercase intersect-once intersect-quarter motion-safe:md:opacity-0 motion-safe:md:intersect:animate-fade"
              set:html={tagline}
            />
          )
        }
        {
          title && (
            <h1
              class="text-5xl md:text-6xl font-bold leading-tighter tracking-tighter mb-4 font-heading dark:text-gray-200 intersect-once intersect-quarter motion-safe:md:opacity-0 motion-safe:md:intersect:animate-fade"
              set:html={title}
            />
          )
        }
        <div class="max-w-3xl mx-auto">
          {
            subtitle && (
              <p
                class="text-xl text-muted mb-6 dark:text-slate-300 intersect-once intersect-quarter motion-safe:md:opacity-0 motion-safe:md:intersect:animate-fade"
                set:html={subtitle}
              />
            )
          }
          <div
            class="max-w-xs sm:max-w-md m-auto flex flex-nowrap flex-col sm:flex-row sm:justify-center gap-4 intersect-once intersect-quarter motion-safe:md:opacity-0 motion-safe:md:intersect:animate-fade"
          >
            {
              callToAction && (
                <div class="flex w-full sm:w-auto">
                  {typeof callToAction === 'string' ? (
                    <Fragment set:html={callToAction} />
                  ) : (
                    <Button variant="primary" {...callToAction} />
                  )}
                </div>
              )
            }
            {
              callToAction2 && (
                <div class="flex w-full sm:w-auto">
                  {typeof callToAction2 === 'string' ? (
                    <Fragment set:html={callToAction2} />
                  ) : (
                    <Button {...callToAction2} />
                  )}
                </div>
              )
            }
          </div>
        </div>
        {content && <Fragment set:html={content} />}
      </div>
    </div>
  </div>

  <!-- Bottom gradient fade -->
  <div class="hero-bottom-fade"></div>
</section>

<style>
  /* Floating orbs */
  .hero-orb {
    position: absolute;
    border-radius: 9999px;
    filter: blur(48px);
    animation: float 12s ease-in-out infinite;
  }

  .hero-orb-1 {
    top: -8rem;
    left: -8rem;
    width: 24rem;
    height: 24rem;
    background: linear-gradient(to bottom right, rgba(43, 116, 255, 0.35), rgba(0, 200, 150, 0.25));
  }

  .hero-orb-2 {
    top: -5rem;
    right: -5rem;
    width: 18rem;
    height: 18rem;
    background: linear-gradient(to bottom left, rgba(255, 198, 64, 0.30), rgba(43, 116, 255, 0.20));
    animation-delay: -2s;
  }

  .hero-orb-3 {
    bottom: 5rem;
    left: 25%;
    width: 12rem;
    height: 12rem;
    background: linear-gradient(to top right, rgba(0, 200, 150, 0.25), rgba(43, 116, 255, 0.20));
    filter: blur(32px);
    animation-delay: -4s;
  }

  .hero-orb-4 {
    bottom: -2.5rem;
    right: 25%;
    width: 16rem;
    height: 16rem;
    background: linear-gradient(to top left, rgba(255, 198, 64, 0.25), rgba(0, 200, 150, 0.20));
    animation-delay: -3s;
  }

  .hero-orb-center {
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 600px;
    height: 600px;
    background: radial-gradient(circle, rgba(43, 116, 255, 0.15), transparent 70%);
    filter: blur(32px);
    animation: none;
  }

  /* Dark mode orbs */
  :global(.dark) .hero-orb-1 {
    background: linear-gradient(to bottom right, rgba(77, 142, 255, 0.45), rgba(0, 220, 170, 0.35));
  }

  :global(.dark) .hero-orb-2 {
    background: linear-gradient(to bottom left, rgba(255, 210, 90, 0.35), rgba(77, 142, 255, 0.25));
  }

  :global(.dark) .hero-orb-3 {
    background: linear-gradient(to top right, rgba(0, 220, 170, 0.30), rgba(77, 142, 255, 0.25));
  }

  :global(.dark) .hero-orb-4 {
    background: linear-gradient(to top left, rgba(255, 210, 90, 0.30), rgba(0, 220, 170, 0.25));
  }

  :global(.dark) .hero-orb-center {
    background: radial-gradient(circle, rgba(77, 142, 255, 0.20), transparent 70%);
  }

  /* Grid pattern */
  .hero-grid {
    opacity: 0.03;
    background-image: radial-gradient(circle at 1px 1px, currentColor 1px, transparent 0);
    background-size: 40px 40px;
  }

  :global(.dark) .hero-grid {
    opacity: 0.05;
  }

  /* Ripple effect - multiple origins */
  .ripple-origin {
    position: absolute;
    width: 0;
    height: 0;
  }

  .ripple-origin-1 {
    top: 25%;
    left: 20%;
    animation: origin-fade 12s ease-in-out infinite;
  }

  .ripple-origin-2 {
    top: 65%;
    right: 15%;
    left: auto;
    animation: origin-fade 12s ease-in-out infinite;
    animation-delay: -4s;
  }

  .ripple-origin-3 {
    top: 45%;
    left: 55%;
    animation: origin-fade 12s ease-in-out infinite;
    animation-delay: -8s;
  }

  .hero-ripple {
    position: absolute;
    top: 0;
    left: 0;
    transform: translate(-50%, -50%) scale(0);
    width: min(600px, 70vw);
    height: min(600px, 70vw);
    border-radius: 50%;
    border: 2px solid rgba(43, 116, 255, 0.4);
    box-shadow: 0 0 20px rgba(43, 116, 255, 0.2), inset 0 0 20px rgba(43, 116, 255, 0.1);
    animation: ripple-expand 6s ease-out infinite;
  }

  .hero-ripple-a {
    animation-delay: 0s;
  }

  .hero-ripple-b {
    animation-delay: 3s;
    border-color: rgba(0, 200, 150, 0.35);
    box-shadow: 0 0 20px rgba(0, 200, 150, 0.2), inset 0 0 20px rgba(0, 200, 150, 0.1);
  }

  .ripple-origin-1 .hero-ripple-a { animation-delay: 0s; }
  .ripple-origin-1 .hero-ripple-b { animation-delay: 3s; }
  .ripple-origin-2 .hero-ripple-a { animation-delay: 2s; }
  .ripple-origin-2 .hero-ripple-b { animation-delay: 5s; }
  .ripple-origin-3 .hero-ripple-a { animation-delay: 4s; }
  .ripple-origin-3 .hero-ripple-b { animation-delay: 1s; }

  :global(.dark) .hero-ripple {
    border-color: rgba(77, 142, 255, 0.5);
    box-shadow: 0 0 25px rgba(77, 142, 255, 0.3), inset 0 0 25px rgba(77, 142, 255, 0.15);
  }

  :global(.dark) .hero-ripple-b {
    border-color: rgba(0, 220, 170, 0.45);
    box-shadow: 0 0 25px rgba(0, 220, 170, 0.3), inset 0 0 25px rgba(0, 220, 170, 0.15);
  }

  @keyframes ripple-expand {
    0% {
      transform: translate(-50%, -50%) scale(0);
      opacity: 1;
    }
    100% {
      transform: translate(-50%, -50%) scale(2);
      opacity: 0;
    }
  }

  @keyframes origin-fade {
    0%, 100% {
      opacity: 1;
    }
    50% {
      opacity: 0.3;
    }
  }

  /* Bottom fade */
  .hero-bottom-fade {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 8rem;
    background: linear-gradient(to top, rgb(255, 255, 255), transparent);
    pointer-events: none;
  }

  :global(.dark) .hero-bottom-fade {
    background: linear-gradient(to top, rgb(28, 29, 36), transparent);
  }

  /* Float animation */
  @keyframes float {
    0%, 100% {
      transform: translateY(0) rotate(0deg);
    }
    33% {
      transform: translateY(-20px) rotate(2deg);
    }
    66% {
      transform: translateY(10px) rotate(-1deg);
    }
  }
</style>
