---
import Layout from '~/layouts/PageLayout.astro';

import HeroSplash from '~/components/widgets/HeroSplash.astro';
import Note from '~/components/widgets/Note.astro';
import FeaturesCards from '~/components/widgets/FeaturesCards.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Steps from '~/components/widgets/Steps.astro';
import Content from '~/components/widgets/Content.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Upstream Labs — Building Sustainable Open-Source Ecosystems',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <HeroSplash
    tagline="Open Source · AI · Public Goods"
    actions={[
      {
        variant: 'primary',
        text: 'Join Our Programs',
        href: '/services/',
        icon: 'tabler:rocket',
      },
      {
        variant: 'secondary',
        text: 'Learn more',
        href: '#mission',
        icon: 'tabler:arrow-down',
      },
    ]}
    image={{ src: '/images/hero-image.jpg', alt: 'Upstream Labs Hero Image' }}
  >
    <Fragment slot="title">
      <span class="block">Where Innovation</span>
      <span class="text-gradient">Flows Open</span>
    </Fragment>

    <Fragment slot="subtitle">
      <span class="font-semibold text-ink-700 dark:text-white">Upstream Labs</span> empowers developers, creators, and communities
      to transform open collaboration into sustainable public goods through training, mentorship, and funding.
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 hero-gradient"></div>
    </Fragment>
  </HeroSplash>

  <!-- Features Widget *************** -->

  <FeaturesCards
    id="mission"
    tagline="Mission"
    title="What We Do at Upstream Labs"
    subtitle="We build bridges between open-source communities, industry partners, and public institutions to create lasting impact."
    columns={3}
    items={[
      {
        title: 'Spread Open Culture',
        description:
          'Build shared understanding of open-source principles, governance models, and public goods infrastructure across sectors.',
        icon: 'tabler:source-code',
      },
      {
        title: 'Grow Ecosystem Talent',
        description:
          'Equip community organizers, developers, and storytellers with the skills to sustain and scale open ecosystems.',
        icon: 'tabler:users-group',
      },
      {
        title: 'Connect Cross-Sector Partners',
        description:
          'Bridge government, industry, academia, and community resources to support long-term public goods development.',
        icon: 'tabler:network',
      },
      {
        title: 'AI-Driven Innovation',
        description:
          'Harness AI to build community influence, powerful content ecosystems, and tools that democratize creation.',
        icon: 'tabler:robot',
      },
      {
        title: 'Sustainable Business Models',
        description:
          'Help open-source projects develop commercial mechanisms that amplify social and economic value without compromising openness.',
        icon: 'tabler:chart-line',
      },
      {
        title: 'Real-World Impact',
        description:
          'Co-design sustainable growth strategies for active open-source projects through hands-on mentorship and funding.',
        icon: 'tabler:target-arrow',
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 section-bg-azure-glow"></div>
    </Fragment>
  </FeaturesCards>

  <!-- Content Widget **************** -->

