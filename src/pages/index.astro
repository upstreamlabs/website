---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Steps from '~/components/widgets/Steps.astro';
import Content from '~/components/widgets/Content.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Upstream Labs — Building Sustainable Open-Source Ecosystems',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Join Our Programs',
        href: '/services/',
        icon: 'tabler:rocket',
      },
      { text: 'Learn more', href: '#mission' },
    ]}
    image={{ src: '~/assets/images/hero-image.png', alt: 'Upstream Labs Hero Image' }}
  >
    <Fragment slot="title">
      Where Every Push Returns to the Source<br />
      <span class="text-gradient">Upstream Labs</span>
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        <span class="font-semibold font-heading">Upstream Labs</span> empowers developers, creators, and communities to transform open collaboration into sustainable public goods.
      </span>
      <span class="block mb-1 sm:hidden font-bold text-primary">Building Open-Source Ecosystems.</span>
      We connect open-source projects with talent, resources, and sustainable business models through training programs, conferences, and mentorship.
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 hero-gradient"></div>
    </Fragment>
  </Hero>

  <!-- Note Widget ******************* -->

  <Note title="Our Philosophy:" description="Open source is more than code—it's a collaborative civic culture that cultivates trust, shared value, and long-term sustainability." />

  <!-- Features Widget *************** -->

  <Features
    id="mission"
    tagline="Mission"
    title="What We Do at Upstream Labs"
    subtitle="We build bridges between open-source communities, industry partners, and public institutions to create lasting impact."
    items={[
      {
        title: 'Spread Open Culture',
        description:
          'Build shared understanding of open-source principles, governance models, and public goods infrastructure across sectors.',
        icon: 'tabler:source-code',
      },
      {
        title: 'Grow Ecosystem Talent',
        description:
          'Equip community organizers, developers, and storytellers with the skills to sustain and scale open ecosystems.',
        icon: 'tabler:users-group',
      },
      {
        title: 'Connect Cross-Sector Partners',
        description:
          'Bridge government, industry, academia, and community resources to support long-term public goods development.',
        icon: 'tabler:network',
      },
      {
        title: 'AI-Driven Innovation',
        description:
          'Harness AI to build community influence, powerful content ecosystems, and tools that democratize creation.',
        icon: 'tabler:robot',
      },
      {
        title: 'Sustainable Business Models',
        description:
          'Help open-source projects develop commercial mechanisms that amplify social and economic value without compromising openness.',
        icon: 'tabler:chart-line',
      },
      {
        title: 'Real-World Impact',
        description:
          'Co-design sustainable growth strategies for active open-source projects through hands-on mentorship and funding.',
        icon: 'tabler:target-arrow',
      },
    ]}
  />

  <!-- Content Widget **************** -->

  <Content
    isReversed
    tagline="Our Approach"
    title="From Source to Scale: The Upstream Way"
    items={[
      {
        title: 'Learning by Doing',
        description:
          'Our programs combine online training with immersive bootcamps where participants work on real open-source projects.',
      },
      {
        title: 'Community-First',
        description:
          'We believe in the power of collective wisdom—learning happens best when people collaborate and contribute together.',
      },
      {
        title: 'Sustainable Growth',
        description:
          'Commercial momentum is not the destination—it is the sustaining force that preserves trust, vitality, and shared stewardship.',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1522071820081-009f0129c71c?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Team collaboration',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Open Collaboration as Public Goods</h3>
      Upstream is a learning-and-doing platform devoted to sustainable open-source ecosystems
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isAfterContent
    items={[
      {
        title: 'Breakthrough',
        description: 'Navigate through the fog of technology cycles, find your anchor of personal value in the AI wave.',
      },
      {
        title: 'Gather',
        description:
          'Move beyond individual learning bottlenecks, dive deep into open source communities, connect with collective wisdom.',
      },
      {
        title: 'Create',
        description:
          'Infuse AI with your own taste and feelings, unleash creativity and imagination, start your own renaissance.',
      },
      {
        title: 'Sustain',
        description:
          'Master the methods of creation and collaboration in the AI era, turn passion into sustainable business.',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1552664730-d307ca884978?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Workshop collaboration',
    }}
  >
    <Fragment slot="content">Finding certainty in the AI era through community and creation.</Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Steps Widget ****************** -->

  <Steps
    title="Our Program Structure"
    items={[
      {
        title: 'Stage 1: <span class="font-medium">Base Camp</span>',
        description:
          'Four-week online training featuring weekly live sessions, peer studios, and guided assignments in open-source principles, AI tools, and community operations.',
        icon: 'tabler:tent',
      },
      {
        title: 'Stage 2: <span class="font-medium">Ascend Camp</span>',
        description:
          'Multi-day immersive bootcamp combining project pairing, governance design sprints, storytelling labs, and final showcases with industry mentors.',
        icon: 'tabler:mountain',
      },
      {
        title: 'Stage 3: <span class="font-medium">Summit Camp</span>',
        description:
          'Top-performing teams receive funding and are paired with open-source project teams for a 6-month collaborative development program.',
        icon: 'tabler:trophy',
      },
      {
        title: 'Launch & Grow!',
        icon: 'tabler:rocket',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1504384308090-c894fdcc538d?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Open office collaboration',
    }}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Our Programs"
    subtitle="Connecting developers, businesses, and policy partners through various initiatives"
    tagline="Events & Training"
    items={[
      {
        title: 'Upstream Training Camp',
        description: 'Comprehensive training in open-source ecosystems, AI tools, and sustainable business models.',
        icon: 'tabler:school',
      },
      {
        title: 'GOBI Conference',
        description: 'Global Open Source Business Innovation Conference connecting developers, businesses, and policy partners.',
        icon: 'tabler:speakerphone',
      },
      {
        title: 'Project Incubation',
        description: 'Mentorship, funding, and resources for promising open-source projects focused on public goods.',
        icon: 'tabler:bulb',
      },
      {
        title: 'Ecosystem Grants',
        description: 'Financial support for community programs, content creation, partnerships, and governance design.',
        icon: 'tabler:coin',
      },
      {
        title: 'Mentorship Network',
        description: 'Access to academic, community, industry, and government mentors who guide project development.',
        icon: 'tabler:users',
      },
      {
        title: 'Knowledge Network',
        description: 'Open case studies and resources that help the broader community learn from successful projects.',
        icon: 'tabler:books',
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Features2>

  <!-- FAQs Widget ******************* -->

  <FAQs
    title="Frequently Asked Questions"
    subtitle="Learn more about Upstream Labs and how we support open-source ecosystems."
    tagline="FAQs"
    classes={{ container: 'max-w-6xl' }}
    items={[
      {
        title: 'What is Upstream Labs?',
        description:
          'Upstream Labs is a platform devoted to building sustainable open-source ecosystems. We empower developers, creators, and communities to transform open collaboration into lasting public goods through training, mentorship, and funding.',
      },
      {
        title: 'Who can join Upstream programs?',
        description:
          'We welcome anyone passionate about open source—developers, community organizers, product managers, content creators, and storytellers. Our programs are designed for people who want to build sustainable impact in open ecosystems.',
      },
      {
        title: 'What kind of projects does Upstream support?',
        description:
          'We support projects across AI, robotics, developer tools, protocols, and civic infrastructure. Our focus is on projects that serve as digital public goods and can demonstrate sustainable community and business models.',
      },
      {
        title: 'How does the Ecosystem Grant work?',
        description:
          'Teams that complete our innovation camp and deliver their showcase become eligible for ecosystem grants. The funding supports community programs, content creation, partnerships, events, and governance design.',
      },
      {
        title: 'What makes Upstream different from other incubators?',
        description:
          'Unlike traditional incubators focused solely on commercial exits, Upstream believes commercial success should sustain openness, not replace it. We help projects build business models that amplify rather than compromise their public goods mission.',
      },
      {
        title: 'How can I get involved?',
        description:
          'You can apply to join our next training cohort, attend our conferences like GOBI, become a mentor, or partner with us as an organization. Reach out via our contact page to learn about current opportunities.',
      },
    ]}
  />

  <!-- Stats Widget ****************** -->

  <Stats
    stats={[
      { title: 'Weeks of Training', amount: '4' },
      { title: 'Grant (RMB)', amount: '100K' },
      { title: 'Days Immersive', amount: '5' },
      { title: 'Months Mentorship', amount: '6' },
    ]}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Join Upstream',
        href: '/contact/',
        icon: 'tabler:arrow-right',
      },
    ]}
  >
    <Fragment slot="title">
      <span class="font-display">溯本铸源，万变更新</span><br class="block sm:hidden" /><span class="sm:whitespace-nowrap">Upstream to Origin</span>
    </Fragment>

    <Fragment slot="subtitle">
      Where every push returns to the source, and every source renews the world.<br class="hidden md:inline" />
      Join us in building sustainable open-source ecosystems.
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 cta-gradient"></div>
    </Fragment>
  </CallToAction>
</Layout>
