---
import Features2 from '~/components/widgets/Features2.astro';
import Features3 from '~/components/widgets/Features3.astro';
import Hero from '~/components/widgets/Hero.astro';
import Stats from '~/components/widgets/Stats.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: '关于我们',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="关于 Upstream Labs"
    image={{
      src: 'https://images.unsplash.com/photo-1517245386807-bb43f82c33c4?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: '社区协作',
    }}
  >
    <Fragment slot="title">
      构建可持续的<br />
      <span class="text-accent dark:text-white">开源生态系统</span>
    </Fragment>

    <Fragment slot="subtitle">
      Upstream Labs 致力于构建可持续的开源生态系统。我们相信开源不仅仅是一种技术路径——它是一种协作的公民文化，培育信任、共享价值和长期可持续性，让集体创新推动共同的未来。
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 hero-gradient"></div>
    </Fragment>
  </Hero>

  <!-- Stats Widget ****************** -->

  <Stats
    title="我们的影响力"
    stats={[
      { title: '培训项目', amount: '2+' },
      { title: '合作项目', amount: '10+' },
      { title: '社区成员', amount: '500+' },
      { title: '覆盖城市', amount: '5+' },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 section-bg-tri-color"></div>
    </Fragment>
  </Stats>

  <!-- Features3 Widget ************** -->

  <Features3
    title="我们的关注领域"
    subtitle="我们支持多个领域的开源项目，这些项目作为数字公共产品服务社会。"
    columns={3}
    isBeforeContent={true}
    items={[
      {
        title: 'AI 与机器学习',
        description:
          '支持开放 AI 基础设施，从异构推理引擎到边缘计算语音 AI 和 AI 原生开发工具。',
        icon: 'tabler:robot',
      },
      {
        title: '机器人与具身智能',
        description:
          '构建开放机器人操作系统、数据流框架，以及面向教育和产业的经济实惠的硬件套件。',
        icon: 'tabler:cpu',
      },
      {
        title: '协议与身份',
        description:
          '为代理网络、去中心化身份和主权通信基础设施开发开放标准。',
        icon: 'tabler:network',
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 section-bg-azure-glow"></div>
    </Fragment>
  </Features3>

  <!-- Features3 Widget ************** -->

  <Features3
    columns={3}
    isAfterContent={true}
    items={[
      {
        title: '开发者工具',
        description:
          '创建 Rust 原生框架、GPU 加速 UI 引擎，以及面向 AI 原生应用的全栈工具包。',
        icon: 'tabler:code',
      },
      {
        title: '社区建设',
        description:
          '培育独立创客社群、创作者社区，以及维持开放协作的治理模式。',
        icon: 'tabler:users-group',
      },
      {
        title: '公民基础设施',
        description:
          '支持为公共机构、教育和社区提供开放数字基础设施的项目。',
        icon: 'tabler:building-community',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1531482615713-2afd69097998?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: '团队协作',
    }}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 section-bg-gold-accent"></div>
    </Fragment>
  </Features3>

  <!-- Steps2 Widget ****************** -->

  <Steps2
    title="我们的价值观"
    subtitle="Upstream 植根于开源精神，以公共产品为中心。我们相信商业动力应该维持开放性，而不是取代它。"
    items={[
      {
        title: '开放协作',
        description:
          '我们相信开放工作的力量——分享知识、代码和资源比囤积它们创造更多价值。',
      },
      {
        title: '公共产品优先',
        description:
          '我们的重点是服务于公共利益的项目。技术应该惠及所有人，而不仅仅是那些能够付费的人。',
      },
      {
        title: '可持续增长',
        description:
          '我们帮助项目找到能够放大而非损害其使命的商业模式。长期影响优于短期收益。',
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 section-bg-aqua-flow"></div>
    </Fragment>
  </Steps2>

  <!-- Steps2 Widget ****************** -->

  <Steps2
    title="我们的导师网络"
    subtitle="导师生态系统确保每个团队从多个角度获得战略、运营和创意指导。"
    isReversed={true}
    callToAction={{
      text: '成为导师',
      href: '/cn/contact/',
    }}
    items={[
      {
        title: '学术导师',
        description: '教授和研究人员指导理论框架和文化基础。',
        icon: 'tabler:school',
      },
      {
        title: '社区导师',
        description: '维护者和社区建设者分享运营最佳实践。',
        icon: 'tabler:users',
      },
      {
        title: '产业导师',
        description: 'OSPO 负责人和开源战略师贡献企业经验。',
        icon: 'tabler:building',
      },
      {
        title: '投资伙伴',
        description: '影响力基金和可持续资本，连接长期财务和生态系统支持。',
        icon: 'tabler:chart-line',
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 section-bg-azure-glow"></div>
    </Fragment>
  </Steps2>

  <!-- Features2 Widget ************** -->

  <Features2
    title="我们的活动"
    tagline="项目"
    columns={2}
    items={[
      {
        title: 'Upstream 源起之道',
        description:
          '我们的旗舰培训项目，结合在线学习与沉浸式训练营。参与者在真实项目中学习开源原则、AI 工具和可持续商业模式。',
      },
      {
        title: 'GOBI 大会',
        description:
          '全球开源商业创新大会。连接开发者、企业和政策伙伴，探索从源头到产业的可持续路径。',
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 section-bg-gold-accent"></div>
    </Fragment>
  </Features2>

  <!-- Features2 Widget ************** -->

  <Features2
    title="联系我们"
    tagline="联系方式"
    columns={2}
    items={[
      {
        title: '发送邮件',
        description:
          '联系我们讨论合作机会、项目申请，或关于 Upstream Labs 的一般咨询。',
        icon: 'tabler:mail',
      },
      {
        title: '关注我们',
        description:
          '通过我们的社交渠道了解我们的项目、活动和我们支持的项目的最新动态。',
        icon: 'tabler:brand-x',
      },
    ]}
  />
</Layout>
