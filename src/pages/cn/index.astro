---
import Layout from '~/layouts/PageLayout.astro';

import HeroSplash from '~/components/widgets/HeroSplash.astro';
import FeaturesCards from '~/components/widgets/FeaturesCards.astro';
import Steps from '~/components/widgets/Steps.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import heroImage from '~/assets/images/hero-image.jpg';
import programImage from '~/assets/images/hero-v2.jpg';

const metadata = {
  title: 'Upstream Labs — 构建可持续的开源生态系统',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <HeroSplash
    tagline="开源 · AI · 公共产品"
    actions={[
      {
        variant: 'primary',
        text: '加入我们的项目',
        href: '/cn/contact/',
        icon: 'tabler:rocket',
      },
      {
        variant: 'secondary',
        text: '了解更多',
        href: '#mission',
        icon: 'tabler:arrow-down',
      },
    ]}
    image={heroImage}
  >
    <Fragment slot="title">
      <span class="block">让创新</span>
      <span class="text-gradient">开放,流动</span>
    </Fragment>

    <Fragment slot="subtitle">
      <span class="font-semibold text-ink-700 dark:text-white">Upstream Labs</span> 致力于构建可持续的开源生态系统。我们联结学术界、产业界和公民社会，将开放协作转化为持久的公共产品与数字基础设施。
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 hero-gradient"></div>
    </Fragment>
  </HeroSplash>

  <!-- Features Widget *************** -->

  <FeaturesCards
    id="mission"
    tagline="构建可持续生态系统"
    title="我们的工作方式"
    subtitle="Upstream Labs 立足于开源、商业创新与公共政策的交汇点。通过培训、对话和长期支持，我们帮助项目从代码成长为社区，实现可持续影响。"
    columns={3}
    items={[
      {
        title: 'Upstream 训练营',
        description: '开源生态系统、AI 工具和可持续商业模式的综合培训。',
        icon: 'tabler:school',
      },
      {
        title: 'GOBI 大会',
        description: '全球开源商业创新大会，连接开发者、企业和政策伙伴。',
        icon: 'tabler:speakerphone',
      },
      {
        title: '项目孵化',
        description: '为专注于公共产品的有前途的开源项目提供指导、资金和资源。',
        icon: 'tabler:bulb',
      },
      {
        title: '生态系统资助',
        description: '为社区项目、内容创作、合作伙伴关系和治理设计提供财务支持。',
        icon: 'tabler:coin',
      },
      {
        title: '导师网络',
        description: '获得来自学术界、社区、产业和政府的导师指导项目开发。',
        icon: 'tabler:users',
      },
      {
        title: '知识网络',
        description: '开放的案例研究和资源，帮助更广泛的社区从成功项目中学习。',
        icon: 'tabler:books',
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 section-bg-azure-glow"></div>
    </Fragment>
  </FeaturesCards>

  <!-- Steps Widget ****************** -->

  <Steps
    title="我们的项目结构"
    items={[
      {
        title: '阶段 1：<span class="font-medium">基础营</span>',
        description:
          '四周在线培训，包括每周直播课程、同伴工作室和开源原则、AI 工具及社区运营的指导作业。',
        icon: 'tabler:tent',
      },
      {
        title: '阶段 2：<span class="font-medium">攀登营</span>',
        description:
          '多日沉浸式训练营，结合项目配对、治理设计冲刺、故事讲述实验室，以及与行业导师的最终展示。',
        icon: 'tabler:mountain',
      },
      {
        title: '阶段 3：<span class="font-medium">登顶营</span>',
        description:
          '表现优异的团队将获得资助，并与开源项目团队配对进行为期 6 个月的协作开发计划。',
        icon: 'tabler:trophy',
      },
      {
        title: '启航与成长！',
        icon: 'tabler:rocket',
      },
    ]}
    image={programImage}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 cta-gradient"></div>
    </Fragment>
  </Steps>

  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: '加入 Upstream',
        href: '/cn/contact/',
        icon: 'tabler:arrow-right',
      },
    ]}
  >
    <Fragment slot="title">
      <span class="font-display">溯本铸源，万变更新</span>
    </Fragment>

    <Fragment slot="subtitle">
      让每一次贡献回归本源，让每一个源头更新公域。<br class="hidden md:inline" />
      加入我们，共建服务公共利益的可持续开源生态系统。
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 cta-gradient"></div>
    </Fragment>
  </CallToAction>
</Layout>
