  <!-- Features Widget *************** -->

  <FeaturesCards
    title="Our Events"
    tagline="Programs"
    columns={2}
    items={[
      {
        title: 'Upstream 源起之道',
        description:
          'Our flagship training program combining online learning with immersive bootcamps. Participants learn open-source principles, AI tools, and sustainable business models while working on real projects.',
        icon: 'tabler:school',
        callToAction: {
          text: 'Learn More',
          href: 'https://camp.upstreamlabs.org',
        },
      },
      {
        title: 'GOBI Conference',
        description:
          'Global Open Source Business Innovation Conference. Connecting developers, businesses, and policy partners to explore sustainable paths from source to industry.',
        icon: 'tabler:speakerphone',
        callToAction: {
          text: 'Learn More',
          href: 'https://gobi.upstreamlabs.org',
        },
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 section-bg-azure-glow"></div>
    </Fragment>
  </FeaturesCards>

  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Get in Touch',
        href: '/en/contact/',
        icon: 'tabler:arrow-right',
      },
    ]}
  >
    <Fragment slot="title">
      <span class="font-display">Join Our Mission</span>
    </Fragment>

    <Fragment slot="subtitle">
      Reach out to discuss partnership opportunities, program applications, mentorship, or general inquiries about Upstream Labs.<br class="hidden md:inline" />
      Together, we can build sustainable open-source ecosystems that serve as digital public infrastructure.
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 cta-gradient"></div>
    </Fragment>
  </CallToAction>
</Layout>
