---
import HeroSplash from '~/components/widgets/HeroSplash.astro';
import FeaturesCards from '~/components/widgets/FeaturesCards.astro';
import Content from '~/components/widgets/Content.astro';
import Stats from '~/components/widgets/Stats.astro';
import Steps from '~/components/widgets/Steps.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Layout from '~/layouts/PageLayout.astro';
import heroImage from '~/assets/images/hero-image-3.jpg';
import valuesImage from '~/assets/images/hero-v.jpg';

const metadata = {
  title: 'About Us',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <HeroSplash
    tagline="About Upstream Labs"
    image={heroImage}
  >
    <Fragment slot="title">
      <span class="block">Building Sustainable</span>
      <span class="text-gradient">Open-Source Ecosystems</span>
    </Fragment>

    <Fragment slot="subtitle">
      Upstream Labs is devoted to building sustainable open-source ecosystems. Since our founding, we've worked at the intersection of technology, policy, and public good—training ecosystem builders, convening cross-sector partners, and supporting projects that serve as digital public infrastructure.
      <br /><br />
      We believe open source is more than a technical pathway—it is a collaborative civic culture that cultivates trust, shared value, and long-term sustainability so collective innovation can power a shared future.
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 hero-gradient"></div>
    </Fragment>
  </HeroSplash>

