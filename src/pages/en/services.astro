---
import CallToAction from '~/components/widgets/CallToAction.astro';
import Content from '~/components/widgets/Content.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Hero from '~/components/widgets/Hero.astro';
import Testimonials from '~/components/widgets/Testimonials.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'Programs',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="Programs"
    title="Programs & Support"
    subtitle="Upstream Labs offers multiple pathways to support open-source projects at every stage—from intensive training camps to ongoing mentorship, from ecosystem grants to global conferences. We've developed diverse models because different projects need different kinds of support."
    actions={[{ variant: 'primary', text: 'Get in Touch', href: '/en/contact/' }]}
    image={{
      src: 'https://images.unsplash.com/photo-1531482615713-2afd69097998?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Upstream Labs Programs',
      width: 2070,
      height: 1380,
    }}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 hero-gradient"></div>
    </Fragment>
  </Hero>

  <!-- Features2 Widget ************** -->

  <Features2
    title="Our Programs"
    subtitle="Comprehensive support for every stage of your open-source journey"
    columns={3}
    items={[
      {
        title: 'Training Camps',
        description:
          'Intensive cohort-based programs combining online learning with in-person bootcamps. Participants learn open-source principles, sustainable business models, and community operations while working on real projects. Recent examples: Upstream 2025 Winter Camp.',
        icon: 'tabler:tent',
      },
      {
        title: 'GOBI Conference',
        description:
          'Global Open Source Business Innovation Conference connecting developers, businesses, and policy partners to explore sustainable paths from source to industry.',
        icon: 'tabler:speakerphone',
      },
      {
        title: 'Ecosystem Grants',
        description:
          'Financial support up to 100,000 RMB for teams that complete our innovation camp. Funding covers community programs, content creation, partnerships, and governance design.',
        icon: 'tabler:coin',
      },
      {
        title: 'Project Incubation',
        description:
          'Hands-on support for promising open-source projects. We pair projects with mentors and resources to accelerate their development and community growth.',
        icon: 'tabler:rocket',
      },
      {
        title: 'Mentorship Network',
        description:
          'Access to academic, community, industry, and government mentors who provide guidance across technology, operations, and business development.',
        icon: 'tabler:users',
      },
      {
        title: '6-Month Fellowship',
        description:
          'Top-performing teams receive extended support including ongoing mentorship, inclusion in our knowledge network, and connections to government incubation partners.',
        icon: 'tabler:award',
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 section-bg-azure-glow"></div>
    </Fragment>
  </Features2>

  <!-- Content Widget **************** -->

  <Content
    isReversed
    items={[
      {
        title: 'Foundation Building',
        description:
          'Learn open-source principles, governance models, and the civic value of public goods. Master technical collaboration and community operations fundamentals.',
        icon: 'tabler:source-code',
      },
      {
        title: 'Growth & Sustainability',
        description:
          'Explore sustainable business models, AI-driven content strategies, and ecosystem development. Design pathways that balance mission and momentum.',
        icon: 'tabler:chart-line',
      },
      {
        title: 'Real-World Application',
        description:
          'Work directly with active open-source projects, applying learned frameworks to real challenges. Develop comprehensive growth and governance strategies.',
        icon: 'tabler:presentation',
      },
      {
        title: 'Long-Term Support',
        description:
          'Top participants receive ongoing mentorship, ecosystem grants, and inclusion in our knowledge network for sustained impact.',
        icon: 'tabler:award',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1522071820081-009f0129c71c?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Online Training',
      width: 2070,
      height: 1380,
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Our Training Approach</h3>
      Combining rigorous learning with hands-on project work, guided by experienced mentors
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 section-bg-gold-accent"></div>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isAfterContent
    items={[
      {
        title: 'Day 1: Inception',
        description:
          'Kick off onsite, meet mentors, align on shared purpose, and match teams with open-source projects.',
        icon: 'tabler:rocket',
      },
      {
        title: 'Day 2: Amplify',
        description:
          'Prototype communication assets, run AIGC storytelling sprints, and polish demos for public launch.',
        icon: 'tabler:volume',
      },
      {
        title: 'Day 3: Showcase',
        description:
          'Present ecosystem roadmaps, gather cross-sector feedback, and celebrate outstanding collaborations.',
        icon: 'tabler:trophy',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1552664730-d307ca884978?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Immersive Bootcamp',
      width: 2070,
      height: 1380,
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Immersive Bootcamps</h3>
      Multi-day in-person experiences where teams work intensively with mentors, refine their strategies, and showcase to partners
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 section-bg-aqua-flow"></div>
    </Fragment>
  </Content>

  <!-- Testimonials Widget *********** -->

  <Testimonials
    title="What Participants Say"
    testimonials={[
      {
        testimonial: `The Upstream program gave me a completely new perspective on open source. It's not just about code—it's about building communities and sustainable impact. The mentorship network was invaluable.`,
        name: 'Open Source Developer',
        job: 'AI Infrastructure Project',
        image: {
          src: 'https://images.unsplash.com/photo-1507003211169-0a1dd7228f2d?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=774&q=80',
          alt: 'Developer Image',
          width: 774,
          height: 774,
        },
      },
      {
        testimonial: `Learning AI-driven content creation and community operations transformed how we approach our project. The hands-on bootcamp was intense but incredibly rewarding.`,
        name: 'Community Manager',
        job: 'Robotics Framework',
        image: {
          src: 'https://images.unsplash.com/photo-1494790108377-be9c29b29330?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=774&q=80',
          alt: 'Community Manager Image',
          width: 774,
          height: 774,
        },
      },
      {
        testimonial: `The ecosystem grant and ongoing mentorship helped us turn our open-source project into a sustainable initiative. We're now reaching users we never thought possible.`,
        name: 'Project Lead',
        job: 'Protocol Development',
        image: {
          src: 'https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=774&q=80',
          alt: 'Project Lead Image',
          width: 774,
          height: 774,
        },
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 section-bg-tri-color"></div>
    </Fragment>
  </Testimonials>

  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Apply to Join',
        href: '/en/contact/',
      },
      {
        text: 'Become a Mentor',
        href: '/en/contact/',
      },
    ]}
    title="Ready to Get Involved?"
    subtitle="Whether you're building an open-source project, want to mentor the next generation of ecosystem builders, or explore partnership opportunities—we'd love to hear from you."
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 cta-gradient"></div>
    </Fragment>
  </CallToAction>
</Layout>
