---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import FeaturesCards from '~/components/widgets/FeaturesCards.astro';

const metadata = {
  title: 'Contact',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText tagline="Contact" title="Let's Connect!" subtitle="We'd love to hear from you. Whether you're interested in joining our programs, becoming a mentor, or exploring partnership opportunities.">
    <Fragment slot="bg">
      <div class="absolute inset-0 hero-gradient"></div>
    </Fragment>
  </HeroText>

  <!-- FeaturesCards Widget ************** -->

  <FeaturesCards
    title="How can we help?"
    columns={3}
    items={[
      {
        title: 'Program Applications',
        description: 'Interested in joining the Upstream Training Camp or submitting a project for incubation.',
        icon: 'tabler:rocket',
      },
      {
        title: 'Become a Mentor',
        description: 'Share your expertise with the next generation of open-source builders and creators.',
        icon: 'tabler:users',
      },
      {
        title: 'Partnership Opportunities',
        description: 'Explore collaboration opportunities for your organization or project.',
        icon: 'tabler:heart-handshake',
      },
      {
        title: 'Media Inquiries',
        description: 'Press and media-related questions about Upstream Labs and our initiatives.',
        icon: 'tabler:news',
      },
      {
        title: 'Email',
        description: 'info@upstreamlabs.org',
        icon: 'tabler:mail',
      },
      {
        title: 'Social',
        description: 'Follow us on X (Twitter)',
        icon: 'tabler:brand-x',
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 section-bg-azure-glow"></div>
    </Fragment>
  </FeaturesCards>
</Layout>
