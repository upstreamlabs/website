---
import Features2 from '~/components/widgets/Features2.astro';
import Features3 from '~/components/widgets/Features3.astro';
import Hero from '~/components/widgets/Hero.astro';
import Stats from '~/components/widgets/Stats.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'About Us',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="About Upstream Labs"
    image={{
      src: 'https://images.unsplash.com/photo-1517245386807-bb43f82c33c4?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Community collaboration',
    }}
  >
    <Fragment slot="title">
      Building Sustainable<br />
      <span class="text-accent dark:text-white">Open-Source Ecosystems</span>
    </Fragment>

    <Fragment slot="subtitle">
      Upstream Labs is devoted to building sustainable open-source ecosystems. We believe open source is more than a technical pathway—it's a collaborative civic culture that cultivates trust, shared value, and long-term sustainability so collective innovation can power a shared future.
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 hero-gradient"></div>
    </Fragment>
  </Hero>

  <!-- Stats Widget ****************** -->

  <Stats
    title="Our Impact"
    stats={[
      { title: 'Training Programs', amount: '2+' },
      { title: 'Partner Projects', amount: '10+' },
      { title: 'Community Members', amount: '500+' },
      { title: 'Cities Reached', amount: '5+' },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 section-bg-tri-color"></div>
    </Fragment>
  </Stats>

  <!-- Features3 Widget ************** -->

  <Features3
    title="Our Focus Areas"
    subtitle="We support open-source projects across multiple domains that serve as digital public goods."
    columns={3}
    isBeforeContent={true}
    items={[
      {
        title: 'AI & Machine Learning',
        description:
          'Supporting open AI infrastructure, from heterogeneous inference engines to edge computing speech AI and AI-native development tools.',
        icon: 'tabler:robot',
      },
      {
        title: 'Robotics & Embodied Intelligence',
        description:
          'Building open robotics operating systems, dataflow frameworks, and affordable hardware kits for education and industry.',
        icon: 'tabler:cpu',
      },
      {
        title: 'Protocols & Identity',
        description:
          'Developing open standards for agent networks, decentralized identity, and sovereign communication infrastructure.',
        icon: 'tabler:network',
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 section-bg-azure-glow"></div>
    </Fragment>
  </Features3>

  <!-- Features3 Widget ************** -->

  <Features3
    columns={3}
    isAfterContent={true}
    items={[
      {
        title: 'Developer Tools',
        description:
          'Creating Rust-native frameworks, GPU-accelerated UI engines, and full-stack toolkits for AI-native applications.',
        icon: 'tabler:code',
      },
      {
        title: 'Community Building',
        description:
          'Nurturing indie maker collectives, creator communities, and governance models that sustain open collaboration.',
        icon: 'tabler:users-group',
      },
      {
        title: 'Civic Infrastructure',
        description:
          'Supporting projects that serve public institutions, education, and communities with open digital infrastructure.',
        icon: 'tabler:building-community',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1531482615713-2afd69097998?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Team collaboration',
    }}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 section-bg-gold-accent"></div>
    </Fragment>
  </Features3>

  <!-- Steps2 Widget ****************** -->

  <Steps2
    title="Our Values"
    subtitle="Upstream is rooted in open-source spirit and centered on public goods. We believe commercial momentum should sustain openness, not replace it."
    items={[
      {
        title: 'Open Collaboration',
        description:
          'We believe in the power of working in the open—sharing knowledge, code, and resources creates more value than hoarding them.',
      },
      {
        title: 'Public Goods First',
        description:
          'Our focus is on projects that serve the commons. Technology should benefit everyone, not just those who can pay.',
      },
      {
        title: 'Sustainable Growth',
        description:
          'We help projects find business models that amplify their mission rather than compromise it. Long-term impact over short-term gains.',
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 section-bg-aqua-flow"></div>
    </Fragment>
  </Steps2>

  <!-- Steps2 Widget ****************** -->

  <Steps2
    title="Our Mentorship Network"
    subtitle="An ecosystem of mentors ensures every team receives strategic, operational, and creative guidance from multiple vantage points."
    isReversed={true}
    callToAction={{
      text: 'Become a Mentor',
      href: '/contact/',
    }}
    items={[
      {
        title: 'Academic Mentors',
        description: 'Professors and researchers guiding theoretical framing and cultural grounding.',
        icon: 'tabler:school',
      },
      {
        title: 'Community Mentors',
        description: 'Maintainers and community builders sharing operational best practices.',
        icon: 'tabler:users',
      },
      {
        title: 'Industry Mentors',
        description: 'OSPO leads and open-source strategists contributing enterprise experience.',
        icon: 'tabler:building',
      },
      {
        title: 'Investment Partners',
        description: 'Impact funds and sustainable capital linking long-term financial and ecosystem support.',
        icon: 'tabler:chart-line',
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 section-bg-azure-glow"></div>
    </Fragment>
  </Steps2>

  <!-- Features2 Widget ************** -->

  <Features2
    title="Our Events"
    tagline="Programs"
    columns={2}
    items={[
      {
        title: 'Upstream 源起之道',
        description:
          'Our flagship training program combining online learning with immersive bootcamps. Participants learn open-source principles, AI tools, and sustainable business models while working on real projects.',
      },
      {
        title: 'GOBI Conference',
        description:
          'Global Open Source Business Innovation Conference. Connecting developers, businesses, and policy partners to explore sustainable paths from source to industry.',
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 section-bg-gold-accent"></div>
    </Fragment>
  </Features2>

  <!-- Features2 Widget ************** -->

  <Features2
    title="Get in Touch"
    tagline="Contact"
    columns={2}
    items={[
      {
        title: 'Email Us',
        description:
          'Reach out to discuss partnership opportunities, program applications, or general inquiries about Upstream Labs.',
        icon: 'tabler:mail',
      },
      {
        title: 'Follow Us',
        description:
          'Stay updated on our programs, events, and the projects we support through our social channels.',
        icon: 'tabler:brand-x',
      },
    ]}
  />
</Layout>
