---
import CallToAction from '~/components/widgets/CallToAction.astro';
import Content from '~/components/widgets/Content.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Hero from '~/components/widgets/Hero.astro';
import Testimonials from '~/components/widgets/Testimonials.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'Programs',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="Programs"
    title="Build Your Open-Source Journey"
    subtitle="Join our comprehensive programs designed to help developers, creators, and communities build sustainable open-source ecosystems. From intensive training to long-term mentorship, we provide the support you need."
    actions={[{ variant: 'primary', text: 'Apply Now', href: '/contact/' }]}
    image={{
      src: 'https://images.unsplash.com/photo-1531482615713-2afd69097998?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Upstream Labs Programs',
    }}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 hero-gradient"></div>
    </Fragment>
  </Hero>

  <!-- Features2 Widget ************** -->

  <Features2
    title="Our Programs"
    subtitle="Comprehensive support for every stage of your open-source journey"
    columns={3}
    items={[
      {
        title: 'Upstream Training Camp',
        description:
          'A comprehensive program combining 4 weeks of online training with an intensive in-person bootcamp. Learn open-source principles, AI tools, community operations, and sustainable business models.',
        icon: 'tabler:tent',
      },
      {
        title: 'GOBI Conference',
        description:
          'Global Open Source Business Innovation Conference connecting developers, businesses, and policy partners to explore sustainable paths from source to industry.',
        icon: 'tabler:speakerphone',
      },
      {
        title: 'Ecosystem Grants',
        description:
          'Financial support up to 100,000 RMB for teams that complete our innovation camp. Funding covers community programs, content creation, partnerships, and governance design.',
        icon: 'tabler:coin',
      },
      {
        title: 'Project Incubation',
        description:
          'Hands-on support for promising open-source projects. We pair projects with mentors and resources to accelerate their development and community growth.',
        icon: 'tabler:rocket',
      },
      {
        title: 'Mentorship Network',
        description:
          'Access to academic, community, industry, and government mentors who provide guidance across technology, operations, and business development.',
        icon: 'tabler:users',
      },
      {
        title: '6-Month Fellowship',
        description:
          'Top-performing teams receive extended support including ongoing mentorship, inclusion in our knowledge network, and connections to government incubation partners.',
        icon: 'tabler:award',
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 section-bg-azure-glow"></div>
    </Fragment>
  </Features2>

  <!-- Content Widget **************** -->

  <Content
    isReversed
    items={[
      {
        title: 'Week 1: Open Source Foundations',
        description:
          'Trace open-source history and values, unpack major license compliance, architect contributor journeys and governance frameworks.',
        icon: 'tabler:source-code',
      },
      {
        title: 'Week 2: AI-Driven Product Growth',
        description:
          'Blend product management mindset with multi-platform community strategies. Learn AI coding tools for rapid site builds and AIGC workflows.',
        icon: 'tabler:robot',
      },
      {
        title: 'Week 3: Sustainable Business Models',
        description:
          'Reimagine public-service business models through SaaS case studies, AARRR metrics, and growth hacks. Design conversion funnels and partner communication.',
        icon: 'tabler:chart-line',
      },
      {
        title: 'Week 4: Project Pairing & Showcase',
        description:
          'Select a live open-source project, architect product, growth, and business strategies. Culminate in an online demo to earn residency spots.',
        icon: 'tabler:presentation',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1522071820081-009f0129c71c?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Online Training',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Base Camp: Online Training</h3>
      Four weeks of comprehensive remote learning with weekly live sessions and peer collaboration
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 section-bg-gold-accent"></div>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isAfterContent
    items={[
      {
        title: 'Day 1: Inception',
        description:
          'Kick off onsite, meet mentors, align on shared purpose, and match teams with open-source projects.',
        icon: 'tabler:rocket',
      },
      {
        title: 'Day 2: Amplify',
        description:
          'Prototype communication assets, run AIGC storytelling sprints, and polish demos for public launch.',
        icon: 'tabler:volume',
      },
      {
        title: 'Day 3: Showcase',
        description:
          'Present ecosystem roadmaps, gather cross-sector feedback, and celebrate outstanding collaborations.',
        icon: 'tabler:trophy',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1552664730-d307ca884978?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Immersive Bootcamp',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Ascend Camp: Immersive Bootcamp</h3>
      Multi-day in-person residency combining project pairing, governance design sprints, and storytelling labs
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 section-bg-aqua-flow"></div>
    </Fragment>
  </Content>

  <!-- Testimonials Widget *********** -->

  <Testimonials
    title="What Participants Say"
    testimonials={[
      {
        testimonial: `The Upstream program gave me a completely new perspective on open source. It's not just about codeâ€”it's about building communities and sustainable impact. The mentorship network was invaluable.`,
        name: 'Open Source Developer',
        job: 'AI Infrastructure Project',
        image: {
          src: 'https://images.unsplash.com/photo-1507003211169-0a1dd7228f2d?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=774&q=80',
          alt: 'Developer Image',
        },
      },
      {
        testimonial: `Learning AI-driven content creation and community operations transformed how we approach our project. The hands-on bootcamp was intense but incredibly rewarding.`,
        name: 'Community Manager',
        job: 'Robotics Framework',
        image: {
          src: 'https://images.unsplash.com/photo-1494790108377-be9c29b29330?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=774&q=80',
          alt: 'Community Manager Image',
        },
      },
      {
        testimonial: `The ecosystem grant and ongoing mentorship helped us turn our open-source project into a sustainable initiative. We're now reaching users we never thought possible.`,
        name: 'Project Lead',
        job: 'Protocol Development',
        image: {
          src: 'https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=774&q=80',
          alt: 'Project Lead Image',
        },
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 section-bg-tri-color"></div>
    </Fragment>
  </Testimonials>

  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Apply to Join',
        href: '/contact/',
      },
      {
        text: 'Become a Mentor',
        href: '/contact/',
      },
    ]}
    title="Ready to Start Your Journey?"
    subtitle="Join the next cohort of Upstream participants or contribute as a mentor. Together, we're building sustainable open-source ecosystems."
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 cta-gradient"></div>
    </Fragment>
  </CallToAction>
</Layout>
